{
  "name": "@asafarim/direxpo",
  "version": "1.5.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "pnpm exmd:build && concurrently \"pnpm run exmd:web\" \"pnpm run exmd:server\"",
    "exmd:web": "pnpm -C web dev",
    "exmd:server": "pnpm -C server dev",
    "exmd:build": "pnpm -r build",
    "build": "pnpm -r build",
    "deploy": "pnpm exmd:build && pnpm -C web deploy",
    "release": "node scripts/release.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "gh-pages": "^6.3.0",
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliSafari-IT/direxpo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://alisafari-it.github.io/direxpo/",
  "author": "Ali Safari <ali@asafarim.com>",
  "license": "MIT",
  "files": [
    "server",
    "web",
    "package.json",
    "index.js",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "Directory Export",
    "export to MD",
    "asafarim",
    "direxpo",
    "cli access",
    "tree view",
    "Tree Structure"
  ]
}
